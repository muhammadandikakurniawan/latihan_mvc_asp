@model List<_3.Models.Person>

<html>
<head>
    <title></title>
    <link rel="stylesheet" href="~/Content/bootstrap.css" type="text/css" />
</head>
<body>
    <table class="table table-striped table-dark">
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">First Name</th>
                <th scope="col">Last Name</th>
                <th scope="col">Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var person in Model)
            {
            <tr>
                <td>@person.Id</td>
                <td>@person.FirstName</td>
                <td>@person.LastName</td>
                <td>
                    <a class="btn btn-danger" href="~/latihan/deleteperson/@person.Id">Delete</a>
                    <a class="btn btn-primary" href="~/latihan/updateperson/@person.Id">Edit</a>
                </td>
            </tr>

            }
        </tbody>
    </table>
</body>
</html>

