@model _3.Models.Person
<html>
<head>
    <title></title>
    <link rel="stylesheet" href="~/Content/bootstrap.css" type="text/css" />
</head>
<body>
    <br />
    <form action="~/latihan/updateperson" method="post">
        <div class="form-group">
            <label for="id">Id</label>
            <input type="text" class="form-control" id="id" name="Id" value="@Model.Id">
        </div>
        <div class="form-group">
            <label for="fn">First Name</label>
            <input type="text" class="form-control" id="fn" name="FirstName" value="@Model.FirstName">
        </div>
        <div class="form-group">
            <label for="ln">Last Name</label>
            <input type="text" class="form-control" id="ln" name="LastName" value="@Model.LastName">
        </div>
        <button type="submit" class="btn btn-success" name="save">Save</button>
    </form>
</body>
</html>

